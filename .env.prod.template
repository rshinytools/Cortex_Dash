# Domain Configuration
DOMAIN_NAME=dashboard.sagarmatha.ai
BACKEND_CORS_ORIGINS=https://dashboard.sagarmatha.ai
FRONTEND_HOST=https://dashboard.sagarmatha.ai
NEXT_PUBLIC_API_URL=https://dashboard.sagarmatha.ai/api
NEXTAUTH_URL=https://dashboard.sagarmatha.ai

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=clinical_dashboard

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Security Keys (Generate new ones for production!)
# Generate SECRET_KEY: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_GENERATE_NEW_SECRET_KEY

# Generate NEXTAUTH_SECRET: openssl rand -hex 32  
NEXTAUTH_SECRET=CHANGE_THIS_GENERATE_NEW_SECRET_KEY

# Encryption key for sensitive data (DO NOT CHANGE after initial setup)
ENCRYPTION_KEY=lfNDmT0NurPGZuiEalqfLmjwqgQcyYh-I05AoVJ6uMo=

# Admin User (Initial superuser)
FIRST_SUPERUSER=admin@sagarmatha.ai
FIRST_SUPERUSER_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Email Configuration
EMAILS_FROM_EMAIL=noreply@sagarmatha.ai

# Performance Tuning
WEB_CONCURRENCY=4
MAX_WORKERS=4

# Flower Monitoring (Optional)
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# SSL Certificate Email (for Let's Encrypt)
SSL_EMAIL=admin@sagarmatha.ai

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# Resource Limits (Optional)
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_CLIENTS=10000